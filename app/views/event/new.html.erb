<html>
  <body>


  <div style="margin: 5%;" class = "d-flex justify-content-center" >

    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Title' %><br />
      <%= text_field_tag 'title' %>
      <br /> <br />

      <%= label_tag 'Description' %><br />
      <%= text_area_tag :description  %>
      <br /> <br />

      <%= label_tag 'Price' %><br />
      <%= text_field_tag :price %>
      <br /> <br />
            
      <%= label_tag 'Date of the event' %><br />
      <%= text_field :start_date, "data-provide" => 'datepicker' %>
      <br /> <br /> 
      
      <%= label_tag 'Duration' %><br />
      <%= text_field_tag :duration %>
      <br /><br />

      <%= label_tag 'Location' %><br/>
      <%= text_field_tag :location %>
      <br /> <br /> 
      
      <%= submit_tag "Create" %>
      <% end %>
      </div>

      <% if @event.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
        <p><strong>We couldn't create the event for the following reason(s) :</strong></p>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          <% end %>
        </ul>
      </div>
      <% end %>
    </div>  

  </body>

</html>

